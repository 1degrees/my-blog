  "scripts": {
    "server": "node server/index.js",
    "dev": "cross-env NODE_ENV=development NODE_ENV_API=development next -p 8080",
    "test": "cross-env NODE_ENV=development NODE_ENV_API=test next -p 8080",
    "prod": "cross-env NODE_ENV=development NODE_ENV_API=production next -p 8080",
    "build:dev": "cross-env NODE_ENV=production NODE_ENV_API=development next build",
    "build:test": "cross-env NODE_ENV=production NODE_ENV_API=test next build",
    "build:prod": "cross-env NODE_ENV=production NODE_ENV_API=production next build",
    "start": "cross-env PORT=8080 NODE_ENV=production node server.js",
    "pm2-start": "pm2 start server.js --watch --name my-blog",
    "pm2-delete": "pm2 delete my-blog",
    "pm2-stop": "pm2 stop my-blog"
  },
